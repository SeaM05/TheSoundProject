MDScreen:
    name: "TSPLogin"
    md_bg_color:  114/255, 228/255, 57/255, 1

    MDFloatLayout:
        id: login_layout
        md_bg_color:  114/255, 228/255, 57/255, 1

    Image:
        source: "Assets/edit2.png"
        size_hint: .22, .22
        pos_hint: {"center_x": .1, "center_y": .8}

    MDLabel:
        text: "TheSoundProject"
        font_size: 33
        pos_hint: {"center_x": .67, "center_y": .85}

    MDLabel:
        text: "Hacknotts '23"
        font_size: 22
        pos_hint: {"center_x": .67, "center_y": .8}

    MDTextField:
        id: input_username
        hint_text: "Username"
        helper_text: ""
        helper_text_mode: "persistent"
        pos_hint: {"center_x": .5, "center_y": .52}
        size_hint_x: .85
        line_color_focus: 0,0,0,1

    MDTextField:
        id: input_password
        hint_text: "Password"
        helper_text: ""
        helper_text_mode: "persistent"
        pos_hint: {"center_x": .5, "center_y": .42}
        size_hint_x: .85
        line_color_focus: 0,0,0,1
        password: True

    MDTextButton:
        text: "Forgotten password?"
        font_size: 11
        haling: "center"
        color: 120/255, 120/255, 120/255, 1
        pos_hint: {"center_x": .5, "center_y": .36}

    MDFlatButton:
        text: "Login"
        size_hint: .8, .08
        pos_hint: {"center_x": .50, "center_y": .25}
        md_bg_color: 255/255, 255/255, 255/255, 1
        on_press: app.graph()

    